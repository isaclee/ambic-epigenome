#!/usr/bin/Rscript
#
library(ggplot2)
library(reshape2)

args=commandArgs(trailingOnly=TRUE)
fpath=args[1]
print(fpath)

info=read.table(gzfile(fpath),sep=",",header=F,stringsAsFactors=F)
lengths=info[,2]
qual=info[,3]
stime=info[,4]
etime=info[,5]

info.summary=summary(lengths)
stat.df=data.frame(baseGb=sum(lengths)/1000000000,read=length(lengths),med=info.summary[3],mean=mean(lengths))
